#!/bin/bash -e

echo "${PROJECT_NAME} RUNNER..."

OPAL_PREFIX=$ENV{OPAL_PREFIX}
LD_LIBRARY_PATH=$ENV{LD_LIBRARY_PATH}
MPI_RUN=$ENV{OPAL_PREFIX}/bin/mpirun
TARGET=${RUNTIME_OUTPUT_DIR}/${PROJECT_NAME}

CMD="OPAL_PREFIX=$OPAL_PREFIX LD_LIBRARY_PATH=$LD_LIBRARY_PATH $MPI_RUN --oversubscribe -np ${MPI_NP} $TARGET"

echo $CMD

eval $CMD


exit -1
